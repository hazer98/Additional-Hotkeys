QFrame#top_frame {
    background: #2D2D2D;
    padding: 24px 16px;
    border: 1px solid #1D1D1D;
    border-radius: 4px;
}

QFrame#top_frame:hover {
    background: #323232;
}

QFrame#top_frame[expanded=true] {
    border-bottom-left-radius: 0;
    border-bottom-right-radius: 0;
}

QFrame#top_frame[expanded=false] {
    border-bottom-left-radius: 4px;
    border-bottom-right-radius: 4px;
}